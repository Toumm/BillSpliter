<?xml version='1.0' encoding='utf-8'?>
<widget id="be.toum" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>BillSplitter</name>
    <description>
        Split the bill easily with weighting.
    </description>
    <author email="toum@toum.be" href="http://www.toum.be">
        Toum
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="orientation" value="portrait" />
    <!--
    		ICON SETTINGS
    -->
    <icon src="billsplitter.png" />
    <icon src="billsplitter.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="billsplitter.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="billsplitter.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="billsplitter.png"   gap:platform="android"    gap:density="xhdpi" />
    
    <!--
    		SPLASH SCREEN SETTINGS
    -->
    <gap:splash src="splashscreen.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="splashscreen.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="splashscreen.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="splashscreen.png" gap:platform="android" gap:density="xhdpi" />
	<gap:splash src="splashscreen.png" gap:platform="android" gap:density="xxhdpi" />
	
	<!-- iPhone 5 / iPod Touch (5th Generation) -->
	<gap:splash src="splashscreen.png" gap:platform="ios" width="640" height="1136" />
	<!--
			PLUGINS
	-->
	<gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" />
	
	<preference name="StatusBarOverlaysWebView" value="false" />
</widget>